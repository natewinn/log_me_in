.background
  .row
    .large-6.columns.large-centered
      .signup-panel
        %p.welcome Reset Your Password
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          %test
          .small-10.columns.small-centered
            = f.email_field :email, autofocus: true, placeholder: "Email", type: "text", class: "text-box"
          %br
          .small-10.columns.small-centered
            = f.submit "Reset password", class: "small button "
            %br
            = render "devise/shared/links"